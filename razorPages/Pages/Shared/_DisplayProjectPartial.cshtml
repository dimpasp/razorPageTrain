@model Project
@{
    var photoPath = "~/images/" + (Model.PhotoPath ?? "noImage.png");
    bool showButtons = (bool)ViewData["ShowButtons"];
}

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
    <div class="card-header">
        <h3>@Model.Tittle</h3>
    </div>

    <img class="card-img-top imageThumbnail" src="@photoPath"
         asp-append-version="true" />

    @if (showButtons)
    {
        <div class="card-footer text-center">
            <a asp-page="/Project/Details" asp-route-ID="@Model.id"
               class="btn btn-primary m-1">View</a>

            <a asp-page="/Project/Edit" asp-route-ID="@Model.id"
               class="btn btn-primary m-1">Edit</a>

            <a asp-page="/Project/Delete" asp-route-ID="@Model.id"
               class="btn btn-danger m-1">Delete</a>
        </div>
    }
</div>
