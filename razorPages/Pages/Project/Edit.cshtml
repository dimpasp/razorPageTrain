@page "{id:min(1)?}"
@model razorPages.Pages.Project.EditModel
@{
    ViewData["Title"] = "Edit";
    var photoPath = "~/images/" + (Model.Project.PhotoPath ?? "noimage.jpg");
    var pageHeader = Model.Project.id > 0 ? "Edit" : "Create";
}

<h1>@pageHeader</h1>
       
<form method="post" class="mt-3" enctype="multipart/form-data">
    <input hidden asp-for="Project.id" />
    <input hidden asp-for="Project.PhotoPath" />
    <input hidden asp-for="Project.DateCreated" />


    <div asp-validation-summary="All"class="text-danger"></div>
   
    <div class="form-group row">
        <label asp-for="Project.Tittle" class="col-sm-2 col-form-label">
        </label>
        <div class="col-sm-10">
            <input asp-for="Project.Tittle" class="form-control" placeholder="Name">
            <span asp-validation-for="Project.Tittle" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Project.Description" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <input asp-for="Project.Description" class="form-control" placeholder="Enter description">
        </div>
    </div>

    <div class="form-group row">
        <label asp-for="Project.Department" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Project.Department" class="custom-select mr-sm-2"asp-items="Html.GetEnumSelectList<Dept>()">
                <option value="">Please Select</option>
            </select>
             <span asp-validation-for="Project.Department" class="text-danger"></span>
        </div>
    </div>
    @* <div class="form-group row">
        <label asp-for="Project.EmployeeName" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            εδω και στον controller περνω δεδομενα για αλλο class απο την βαση
            <select asp-for="Project.EmployeeName" class="custom-select mr-sm-2"asp-items="@(new SelectList(Model.displayEmployees,"Id","Name"))">
                <option value="">Please Select</option>
            </select>
        </div>
    </div>*@
       <div class="form-group row">
        <label asp-for="Project.EmployeeId" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <select asp-for="Project.EmployeeId" class="custom-select mr-sm-2"asp-items="ViewBag.EmployeeId">
                <option value="">Please Select</option>
            </select>
             <span asp-validation-for="Project.EmployeeId" class="text-danger"></span>
        </div>
    </div>
    <div class="form-group row">
        <label asp-for="Photo" class="col-sm-2 col-form-label"></label>
        <div class="col-sm-10">
            <div class="custom-file">
                <input asp-for="Photo" class="custom-file-input form-control">
                <label class="custom-file-label">Click here to change photo</label>
            </div>
        </div>
    </div>

    <div class="form-group row col-sm-4 offset-4">
        <img class="imageThumbnail" src="@photoPath" asp-append-version="true" />
    </div>

    <div class="form-group row">
        <div class="col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
            <a asp-page="/Project/Index" class="btn btn-primary">Cancel</a>
        </div>
    </div>



    @section Scripts {
    <script>
        $(document).ready(function () {
            $('.custom-file-input').on("change", function () {
                var fileName = $(this).val().split("\\").pop();
                $(this).next('.custom-file-label').html(fileName);
            });
        });
    </script>
       <partial name="_ValidationScriptsPartial"/>
    }
</form>

